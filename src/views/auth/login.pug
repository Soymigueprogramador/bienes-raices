extends ../layout/index

block contenido
  .titulo
    h1.bienvenida Bienes
      span.rices Rices
    h2.subtitulo #{paginaLogin} 

  if errores
    .errores
      each error in errores
        p.mostrar-errores= error.msg

  .formulario
    .form-container
      form(method="POST" action="/auth/login")
        div.form-group

        div.form-group
          label(for="email") Email
          input#email.input-text(type="email" name="email" placeholder="Ingresa tu email")

        div.form-group
          label(for="password") Contraseña
          input#password.input-text(type="password" name="password" placeholder="Ingresa tu contraseña")

        input.submit(type="submit" value="Iniciar sesión")

        p.crear-cuenta ¿No tienes cuenta?
          a.enlace(href="registro") Regístrate ahora

        p.crear-cuenta ¿Olvidaste tu contraseña?
          a.enlace(href="recuperarCuenta") Recuperar cuenta  