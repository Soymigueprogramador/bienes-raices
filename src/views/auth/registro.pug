extends ../layout/index

block contenido
  .titulo
    h1.bienvenida Bienes
      span.rices Rices
    h2.subtitulo #{pagina}

    if errores 
      .errores
        each error in errores  
          p.mostrar-errores= error.msg

  .formulario
    .form-container
      form(method="POST", action="/auth/registro" noValidate)
        .form-group
          label(for="nombre") Nombre
          input#nombre.input-text(type="text", name="nombre", placeholder="Ingresa tu nombre", value=`${datos && datos.nombre ? datos.nombre : ''}`, required)

        .form-group
          label(for="email") Email
          input#email.input-text(type="email", name="email", placeholder="Ingresa tu email", value=`${datos && datos.email ? datos.email : ''}`, required)

        .form-group
          label(for="password") Contraseña
          input#password.input-text(type="password", name="password", placeholder="Ingresa tu contraseña", required)

        .form-group
          label(for="confirm-password") Repetir contraseña
          input#repetirPassword.input-text(type="password", name="repetirPassword", placeholder="Repite tu contraseña", required)

        input.submit(type="submit" value="Crear cuenta")

        p.crear-cuenta ¿Ya tienes cuenta? 
          a.enlace(href="/login") Inicia sesión
