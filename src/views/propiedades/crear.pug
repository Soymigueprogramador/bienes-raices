extends ../layout/index

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
  .titulo
    h1.bienvenida 
      | Bienes
      span.rices Rices
    h2.subtitulo= pagina
    h3.subtitulo= aviso

  .container-form-carga
    form(action="")
      .form-group
        label(for="titulo") Título
        input#titulo.input-text(type="text" name="titulo" placeholder="Ingresa el título" )

      .categorias
        label(for="categorias") Tipo de Bienes
        select#categorias.input-text(name="categorias")
          option(value="") Selecciona el tipo de vivienda
          
      
        label(for="precio") Precio
        select#precio.input-text(name="precio")
          option(value="") Selecciona el rango de precio
          
        label(for="habitaciones") Habitaciones
        select#habitaciones.input-text(name="habitaciones")
          option(value="") Selecciona la cantidad de habitaciones
          - let habitaciones = 1;
              while habitaciones < 11
                option(value=habitaciones) #{habitaciones++}

        label(for="dias-disponibles") Provincia
        select#dias-disponibles.input-text(name="provincia")
          option(value="") Selecciona la provincia
        
        label(for="dias-disponibles") Cuidad
        select#dias-disponibles.input-text(name="cuidad")
          option(value="") Selecciona la cuidad

        label(for="dias-disponibles") Partido
        select#dias-disponibles.input-text(name="partido")
          option(value="") Selecciona el partido

        label(for="dias-disponibles") Localidad
        select#dias-disponibles.input-text(name="localidad")
          option(value="") Selecciona la localidad

        label(for="dias-disponibles") Duracion del alqueler
        select#dias-disponibles.input-text(name="duracion-del-alquiler")
          option(value="") Selecciona la duracion del alquiler
      
      label(for="titulo") Descripcion 
      textarea#descripcion(type="text" name="descipcion" placeholder="Ingresa la direccion del domicilio") 
      
      label(for="titulo") Direccion
      input#titulo.input-text(type="text" name="direccion" placeholder="Ingresa la direccion del domicilio")

      label(for="titulo") Telefono
      input#titulo.input-text(type="number" name="telefono" placeholder="Ingresa tu numero de telefono")

      label(for="titulo") Email (Opcional)
      input#titulo.input-text(type="email" name="email" placeholder="Ingresa tu email")

      input.submit(type="submit" value="Cargar propiedad")

    #mapa.mapa

block scripts 
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
  script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
  script(src="/js/mapa.js")